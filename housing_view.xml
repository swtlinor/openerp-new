			</field>
		</record>
		
		<record id="housing_res_director_tree" model="ir.ui.view">
			<field name="name">housing.res.director.tree</field>
			<field name="model">housing.res.director</field>
			<field name="arch" type="xml">
				<tree string="Resident Officials">
